{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('assets/global/css/components.min.css') }}" rel="stylesheet" id="style_components" type="text/css" />
    <link href="{{ asset('assets/global/css/plugins.min.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block pageTitle %}
    <li>
        <a href="{{ path("db_dashboard_list") }}">{{'Dashboard' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path("ab_user_list") }}">{{'User' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <b>{{'Add' | trans }}</b>
    </li>
{% endblock %}


{% block body %}
    
    
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        {{ form_start(form, {'method': 'POST'}) }}
        <div class="box-body row">
            <div class="form-group col-md-6">
                <label for="user_Id_id">{{ form_label(form.username) }}</label>
                {{ form_widget(form.username, {'attr': {'id' : 'user_userid_id','class': 'form-control','placeholder': 'Username'}}) }}
            </div>                
            <div class="form-group col-md-6">
                <label for="user_lastname_id">{{ form_label(form.lastname) }}</label>
                {{ form_widget(form.lastname, {'attr': {'id' : 'user_lastname_id','class': 'form-control','placeholder': 'Lastname'}}) }}
            </div>
            <div class="form-group col-md-6">
                <label for="user_password_id">{{ form_label(form.password) }}</label>
                {{ form_widget(form.password, {'attr': {'id' : 'user_password_id','class': 'form-control','placeholder': 'Password'}}) }}
            </div>
            <div class="form-group col-md-6">
                <label for="user_firstname_id">{{ form_label(form.firstname) }}</label>
                {{ form_widget(form.firstname, {'attr': {'id' : 'user_firstname_id','class': 'form-control','placeholder': 'Firstname'}}) }}
            </div>
            <div class="form-group col-md-6 col-md-offset-6">
                <label for="user_mail_id">{{ form_label(form.mail) }}</label>
                {{ form_widget(form.mail, {'attr': {'id' : 'user_mail_id','class': 'form-control','placeholder': 'Mail'}}) }}
            </div>
            <div class="form-group col-md-6 col-md-offset-6">
                <label for="user_enabled_id">{{ form_label(form.enabled) }}</label>
                {{ form_widget(form.enabled, {'id' : 'user_enabled_id', 'attr': {'class': 'form-control','placeholder': 'Enabled'}}) }}
            </div>

            <div class="form-group col-md-12 ">
                <label for="multiple" class="control-label">{{'Roles' | trans }}</label>
                {{ form_widget(form.roles, {'attr': {'id' : 'user_mail_id','class': 'form-control select2-multiple'}}) }}
            </div>
        </div>


        <div class="box-footer pull-right">
           <input class="btn btn-success" type="submit" value="{{'Save' | trans }}"/>
        </div>
        {#<div class="box-footer">
            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>#}

    </div><!-- /.box -->

    {{ form_end(form) }}
{% endblock %}

{% block plg_javascripts %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('assets/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/global/plugins/bootstrap-wizard/jquery.bootstrap.wizard.min.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}

{% block script_javascripts %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('assets/pages/scripts/form-wizard.min.js') }}" type="text/javascript"></script>    
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %} 
