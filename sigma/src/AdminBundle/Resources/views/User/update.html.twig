{% extends "::base.html.twig" %}

{% block title %}AdminBundle:User:update{% endblock %}

{% block pageTitle %}
    <li>
        <a href="{{ path("db_dashboard_list") }}">{{'Dashboard' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path("ab_user_list") }}">{{'User' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <b>{{'Update' | trans }}</b>
    </li>
{% endblock %}

{% block body %}

    <div class="box box-primary">
        <div class="box-header">
        </div><!-- /.box-header -->
            {{ form_start(form, {'method': 'POST'}) }}
        <div class="box-body row">
            <div class="form-group col-md-6">
                <label for="user_userId_id">{{'Username' | trans }}</label>
                {{ form_widget(form.username, {'attr': {'id' : 'user_userid_id','class': 'form-control','placeholder': 'UserId'}}) }}
            </div>                
            <div class="form-group col-md-6">
                <label for="user_lastname_id">{{'Lastname' | trans }}</label>
                {{ form_widget(form.lastname, {'attr': {'id' : 'user_lastname_id','class': 'form-control','placeholder': 'User Lastname'}}) }}
            </div>
            <div class="form-group col-md-6">
                <label for="user_password_id">{{'Password' | trans }}</label>
                {{ form_widget(form.password, {'attr': {'id' : 'user_password_id','class': 'form-control','placeholder': 'User Password'}}) }}
            </div>
            <div class="form-group col-md-6">
                <label for="user_firstname_id">{{'Firstname' | trans }}</label>
                {{ form_widget(form.firstname, {'attr': {'id' : 'user_firstname_id','class': 'form-control','placeholder': 'User Firstname'}}) }}
            </div>
            <div class="form-group col-md-6 col-md-offset-6">
                <label for="user_mail_id">{{'Mail' | trans }}</label>
                {{ form_widget(form.mail, {'attr': {'id' : 'user_mail_id','class': 'form-control','placeholder': 'User Mail'}}) }}
            </div>
            <div class="form-group col-md-6 col-md-offset-6">
                <label for="user_enabled_id">{{'Enabled' | trans }}</label>
                {{ form_widget(form.enabled, {'id' : 'user_enabled_id', 'attr': {'class': 'form-control','placeholder': 'User Enabled'}}) }}
            </div>
            
            <div class="form-group col-md-12 ">
                <label for="multiple" class="control-label">{{'Roles' | trans }}</label>
                {{ form_widget(form.roles, {'attr': {'id' : 'user_mail_id','class': 'form-control select2-multiple'}}) }}
            </div>
        </div>


        <div class="box-footer pull-right">
                <a href="{{ path ("ab_user_list")}}"> <input class="btn btn-success" type="submit" value="{{'Save' | trans }}"/> </a>
                <a href="{{ path ("ab_roles_list")}}"> <input class="btn btn-success" type="submit" value="{{'Cancel' | trans }}"/> </a>

        </div>
                
    {{ form_end(form) }}
    </div><!-- /.box -->
{% endblock %}