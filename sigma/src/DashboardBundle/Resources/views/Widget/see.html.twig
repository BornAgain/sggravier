{% extends "::base.html.twig" %}

{% block pageTitle %}
    <li>
        <a href="{{ path("db_dashboard_list") }}">{{'Dashboard' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path("db_widget_list") }}">{{'Widgets' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <b>{{'See' | trans }}</b>
    </li>

{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('notice_ticket_add') %}
    <div class="alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
    <div class="box box-primary">
        <div class="box-header">
        </div><!-- /.box-header -->
        <div class="box-body">
            
            <div class="form-group col-md-6">
                <label for="country">Type</label>
                <div class="form-control">{{ entity.type }}</div>                    
            </div> 
            
            <div class="form-group col-md-6">
                <label for="country">{{'Name' | trans }}</label>
                <div class="form-control">{{ entity.type }}</div>                    
            </div>
            
            <div class="form-group col-md-6">
                <label for="country">Position</label>
                <div class="form-control">{{ entity.position }}</div>                    
            </div>
            
            <div class="form-group col-md-6">
                <label for="country">{{'Query' | trans }}</label>
                <div class="form-control">{{ entity.query }}</div>                    
            </div>
            <div class="form-group col-md-6">
                <label for="country">{{'Update date' | trans }}</label>
                <div class="form-control">{{ entity.updateDate | date("Y-m-d H:i;s") }}</div>                    
            </div> 
            
            
            
            <div class="box-footer pull-right">
                <a href="{{ path ("db_widget_update", {'id':entity.id})}}"> <input class="btn btn-success" type="{{'submit' | trans }}" value="{{'Update' | trans }}"/> </a>
                <a href="{{ path ("db_widget_delete", {'id':entity.id})}}"> <input class="btn btn-success" type="{{'submit' | trans }}" value="{{'Delete' | trans }}"/> </a>
            </div>

        </div><!-- /.box-body -->
    </div>
{% endblock %}
