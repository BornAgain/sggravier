{% extends "::base.html.twig" %}

{% block title %}AdminBundle:Roles:update{% endblock %}

{% block pageTitle %}
    <li>
        <a href="{{ path("db_dashboard_list") }}">{{'Dashboard' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ path("ab_roles_list") }}">{{'Roles' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <b>{{'Update' | trans }}</b>
    </li>
{% endblock %}

{% block body %}

    <div class="box box-primary">
        <div class="box-header">
        </div><!-- /.box-header -->
            {{ form_start(form, {'method': 'POST'}) }}
        <div class="box-body row">
            <div class="form-group">
                    <label for="name">{{'Description' | trans }}</label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control','placeholder': 'Institution Name'}}) }}
                </div>
                <div class="form-group">
                    <label for="country">{{'Enabled' | trans }}</label>
                    {{ form_widget(form.enabled, {'attr': {'class': 'form-control','placeholder': 'Institution Country'}}) }}
                </div>
            </div><!-- /.box-body -->

        <div class="box-footer pull-right">
                <a href="{{ path ("ab_user_list")}}"> <input class="btn btn-success" type="submit" value="{{'Save' | trans }}"/> </a>
                <a href="{{ path ("ab_roles_list")}}"> <input class="btn btn-success" type="submit" value="{{'Cancel' | trans }}"/> </a>
        </div>
                
    {{ form_end(form) }}
    </div><!-- /.box -->
{% endblock %}