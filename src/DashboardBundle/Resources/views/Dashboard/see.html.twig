{% extends "::base.html.twig" %}

{% block title %}DashboardBundle:Dashboard:see{% endblock %}

{% block pageTitle %}
    <li>
        <a href="{{ path("db_dashboard_list") }}">{{'dashboards' | trans }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <b>{{'see' | trans }}</b>
    </li>
{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('notice_ticket_add') %}
    <div class="alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
    <div class="box box-primary">
        <div class="box-header">
        </div><!-- /.box-header -->
        <div class="box-body">
            
            <div class="form-group">
                <label for="country">{{'dashboard_name' | trans }}</label>
                <div class="form-control">{{ entity.name }}</div>                    
            </div> 
            <div class="form-group">
                <label for="country">{{'update_date' | trans }}</label>
                <div class="form-control">{{ entity.updateDate | date("Y-m-d H:i;s") }}</div>                    
            </div> 
            
            <div class="box-footer pull-right">
                <a href="{{ path ("db_dashboard_update", {'id':entity.id})}}"> <input class="btn btn-success" type="submit" value="{{'update' | trans }}"/> </a>
                <a href="{{ path ("db_dashboard_delete", {'id':entity.id})}}"> <input class="btn btn-success" type="submit" value="{{'delete' | trans }}"/> </a>
            </div>

        </div><!-- /.box-body -->
{% endblock %}
